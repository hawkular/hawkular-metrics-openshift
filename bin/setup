#!/bin/bash -eu

source $OPENSHIFT_CARTRIDGE_SDK_BASH

if [ -d $OPENSHIFT_DATA_DIR/cassandra ]
then
	echo "Cassandra already installed"
else
	cd $OPENSHIFT_DATA_DIR
	curl -OL http://downloads.datastax.com/community/dsc-cassandra-2.1.0-bin.tar.gz
	tar -xzvf dsc-cassandra-2.1.0-bin.tar.gz
	rm *.tar.gz
	mv dsc-cassandra-* cassandra
	mkdir cassandra-data
	cd cassandra-data
	mkdir data
	mkdir saved_caches
	mkdir commitlog
	touch system.log
	cd $OPENSHIFT_DATA_DIR/cassandra/conf/
	sed -ig 's,/var/lib/cassandra,$HOME/app-root/data/cassandra-data,' cassandra.yaml
	sed -ig 's/127.0.0.1/'$OPENSHIFT_RHQM_IP'/g' cassandra.yaml
	sed -ig 's/localhost/'$OPENSHIFT_RHQM_IP'/g' cassandra.yaml
	sed -ig 's,9042,19042,' cassandra.yaml
	sed -ig 's,7000,17000,' cassandra.yaml
	sed -ig 's,7001,17001,' cassandra.yaml
	sed -ig 's,9160,19160,' cassandra.yaml
	sed -ig 's/localhost/'$OPENSHIFT_RHQM_IP'/g' cassandra.yaml
	sed -ig 's,${max_sensible_yg_in_mb}M,256M,' cassandra-env.sh
	sed -ig 's,${desired_yg_in_mb}M,256M,' cassandra-env.sh
	sed -ig '/jmxremote/s/^/#/' cassandra-env.sh
fi

if [ -d $OPENSHIFT_DATA_DIR/wildfly ]
then
	echo "Wildfly already installed"
else	
	cd $OPENSHIFT_DATA_DIR
	curl -OL http://download.jboss.org/wildfly/8.1.0.Final/wildfly-8.1.0.Final.zip
	unzip wildfly-8.1.0.Final.zip
   rm *.zip
   mv wildfly-* wildfly
fi


RHQ_METRICS_VERSION='0.2.3.20141020-M4'
if [ -d $OPENSHIFT_DATA_DIR/wildfly/standalone/deployments ]
then
   cd $OPENSHIFT_DATA_DIR/wildfly/standalone/deployments
   curl -OL "http://repository.jboss.org/nexus/content/repositories/public/org/rhq/metrics/rest-servlet/${RHQ_METRICS_VERSION}/rest-servlet-${RHQ_METRICS_VERSION}.war"
   curl -OL "https://repository.jboss.org/nexus/content/repositories/public/org/rhq/metrics/metrics-console/${RHQ_METRICS_VERSION}/metrics-console-${RHQ_METRICS_VERSION}.war"
   curl -OL "https://repository.jboss.org/nexus/content/repositories/public/org/rhq/metrics/explorer/${RHQ_METRICS_VERSION}/explorer-${RHQ_METRICS_VERSION}.war"
fi
