#!/bin/bash -eu

#source $OPENSHIFT_CARTRIDGE_SDK_BASH

function extractUrl()
{
	local url=$(curl --silent $1)
	local url=`echo $url | grep war | grep -o '<a href=['"'"'"][^"'"'"']*['"'"'"]'  | sed -e 's/^<a href=["'"'"']//' -e 's/["'"'"']$//' | grep war`
	echo $url
}

if [ -d $OPENSHIFT_DATA_DIR/cassandra ]
then
	echo "Cassandra already installed"
else
	cd $OPENSHIFT_DATA_DIR
	curl -OL "http://downloads.datastax.com/community/dsc-cassandra-${OPENSHIFT_CASSANDRA_VERSION}-bin.tar.gz"
	tar -xzvf "dsc-cassandra-${OPENSHIFT_CASSANDRA_VERSION}-bin.tar.gz"
	rm *.tar.gz
	mv dsc-cassandra-* cassandra
	mkdir cassandra-data
	cd cassandra-data
	mkdir data
	mkdir saved_caches
	mkdir commitlog
	touch system.log
	cd $OPENSHIFT_DATA_DIR/cassandra/conf/
	sed -ig 's,/var/lib/cassandra,$HOME/app-root/data/cassandra-data,' cassandra.yaml
	sed -ig 's/127.0.0.1/'$OPENSHIFT_RHQM_IP'/g' cassandra.yaml
	sed -ig 's/localhost/'$OPENSHIFT_RHQM_IP'/g' cassandra.yaml
	sed -ig 's,9042,19042,' cassandra.yaml
	sed -ig 's,7000,17000,' cassandra.yaml
	sed -ig 's,7001,17001,' cassandra.yaml
	sed -ig 's,9160,19160,' cassandra.yaml
	sed -ig 's/localhost/'$OPENSHIFT_RHQM_IP'/g' cassandra.yaml
   sed -ig 's,#MAX_HEAP_SIZE=.*,MAX_HEAP_SIZE=\"100M\",' cassandra-env.sh
   sed -ig 's,#HEAP_NEWSIZE=.*,HEAP_NEWSIZE=\"80M\",' cassandra-env.sh
	sed -ig '/jmxremote/s/^/#/' cassandra-env.sh
fi

if [ -d $OPENSHIFT_DATA_DIR/wildfly ]
then
	echo "Wildfly already installed"
else	
	cd $OPENSHIFT_DATA_DIR
	curl -OL "http://download.jboss.org/wildfly/${OPENSHIFT_WILDFLY_VERSION}/wildfly-${OPENSHIFT_WILDFLY_VERSION}.zip"
	unzip "wildfly-${OPENSHIFT_WILDFLY_VERSION}.zip"
   rm *.zip
   mv wildfly-* wildfly
fi

if [ -d $OPENSHIFT_DATA_DIR/wildfly/standalone/deployments ]
then
   if [ "$OPENSHIFT_RHQ_METRICS_DISTRIBUTION" = "source" ]
   then
      cd $OPENSHIFT_DATA_DIR
      git clone https://github.com/rhq-project/rhq-metrics.git
      cd rhq-metrics
      mvn -T 4 clean install -DskipTests
      cp rest-servlet/target/rhq-metric-rest*.war $OPENSHIFT_DATA_DIR/wildfly/standalone/deployments
      cp ui/console/target/metrics-console-*.war $OPENSHIFT_DATA_DIR/wildfly/standalone/deployments
      cp ui/explorer/target/explorer-*.war $OPENSHIFT_DATA_DIR/wildfly/standalone/deployments
   else
      cd $OPENSHIFT_DATA_DIR/wildfly/standalone/deployments

      curl -OL $(extractUrl "http://repository.jboss.org/nexus/content/repositories/public/org/rhq/metrics/rest-servlet/${OPENSHIFT_RHQ_METRICS_VERSION}/")
      curl -OL $(extractUrl "https://repository.jboss.org/nexus/content/repositories/public/org/rhq/metrics/metrics-console/${OPENSHIFT_RHQ_METRICS_VERSION}/")
      curl -OL $(extractUrl "https://repository.jboss.org/nexus/content/repositories/public/org/rhq/metrics/explorer/${OPENSHIFT_RHQ_METRICS_VERSION}/")
   fi
fi
